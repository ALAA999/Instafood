<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="filter_input">
        <item name="backgroundTint">@color/app_red</item>
    </style>

    <style name="filter_input_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_red</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="filter_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="contentPadding">4dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="filter_checkbox_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="filter_checkbox_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="filter_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="filter_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="filter_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="filter_icon">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="filter_header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">4dp</item>
    </style>
</resources>
